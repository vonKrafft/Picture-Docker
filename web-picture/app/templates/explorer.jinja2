<!doctype html>
<html lang="fr">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/static/css/bootstrap-4.3.1.min.css">
    <link rel="stylesheet" href="/static/css/style.css">

    <title>Picture :: Explorer</title>

</head>
<body>

    <main class="container">

        <nav aria-label="breadcrumb" class="d-flex my-2">
            <ol class="breadcrumb flex-grow-1 my-0 py-2 mr-2">
            {% if year and month %}
                <li class="breadcrumb-item"><a class="text-secondary" href="/admin/explorer">Explorer</a></li>
                <li class="breadcrumb-item"><a class="text-secondary" href="/admin/explorer?year={{ year }}">{{ year }}</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ month }}</li>
            {% elif year %}
                <li class="breadcrumb-item"><a class="text-secondary" href="/admin/explorer">Explorer</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ year }}</li>
            {% else %}
                <li class="breadcrumb-item active" aria-current="page">Explorer</li>
            {% endif %}
            </ol>
            <a href="/admin" class="btn btn-dark">Upload</a>
        </nav>

        {% if year and month %}
        <section class="row my-2 mx-0">
            <ul class="list-group w-100">
                <li class="list-group-item py-2 px-3 d-flex">
                    <div class="col-12 px-0 align-self-center">
                        <svg focusable="false" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" height="1em"><path fill="currentColor" d="M527.9 224H480v-48c0-26.5-21.5-48-48-48H272l-64-64H48C21.5 64 0 85.5 0 112v288c0 26.5 21.5 48 48 48h400c16.5 0 31.9-8.5 40.7-22.6l79.9-128c20-31.9-3-73.4-40.7-73.4zM48 118c0-3.3 2.7-6 6-6h134.1l64 64H426c3.3 0 6 2.7 6 6v42H152c-16.8 0-32.4 8.8-41.1 23.2L48 351.4zm400 282H72l77.2-128H528z" class=""></path></svg>
                        <a href="/admin/explorer?year={{year}}" class="text-dark text-truncate">..</a><br>
                    </div>
                </li>
                {% if files|length > 0 %}
                    {% for img in files %}
                    <li class="list-group-item py-2 px-3">
                        <div class="media">
                            <img src="/media/{{ img.path }}" class="bg-secondary">
                            <div class="media-body d-flex">
                                <div class="col-6 align-self-center small">
                                    <span class="text-truncate">{{ img.filename }}</span><br>
                                    <a href="/media/{{ img.path }}" class="small text-secondary text-truncate">{{ img.path }}</a>
                                </div>
                                <div class="col-4 align-self-center small">
                                {% for thumbnail in img.thumbnails %}
                                    <a href="/upload/{{ thumbnail.path }}" class="btn btn-outline-light btn-sm mr-1 border-secondary text-secondary">
                                        <small>{{ thumbnail.size.split('x')[0] }}px</small>
                                    </a>
                                {% endfor %}
                                </div>
                                <div class="col-1 align-self-center text-nowrap">{% if img.weight %}{{ img.weight }}o{% else %}&ndash;{% endif %}</div>
                                <div class="col-1 align-self-center text-right pr-0">
                                    <a href="/admin/delete/{{ img.uuid }}" class="text-danger"><svg focusable="false"role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" height="1em"><path fill="currentColor" d="M268 416h24a12 12 0 0 0 12-12V188a12 12 0 0 0-12-12h-24a12 12 0 0 0-12 12v216a12 12 0 0 0 12 12zM432 80h-82.41l-34-56.7A48 48 0 0 0 274.41 0H173.59a48 48 0 0 0-41.16 23.3L98.41 80H16A16 16 0 0 0 0 96v16a16 16 0 0 0 16 16h16v336a48 48 0 0 0 48 48h288a48 48 0 0 0 48-48V128h16a16 16 0 0 0 16-16V96a16 16 0 0 0-16-16zM171.84 50.91A6 6 0 0 1 177 48h94a6 6 0 0 1 5.15 2.91L293.61 80H154.39zM368 464H80V128h288zm-212-48h24a12 12 0 0 0 12-12V188a12 12 0 0 0-12-12h-24a12 12 0 0 0-12 12v216a12 12 0 0 0 12 12z" class=""></path></svg></a>
                                    <a href="/image/{{ img.uuid }}" class="text-secondary"><svg focusable="false" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" height="1em"><path fill="currentColor" d="M464 64H48C21.49 64 0 85.49 0 112v288c0 26.51 21.49 48 48 48h416c26.51 0 48-21.49 48-48V112c0-26.51-21.49-48-48-48zm16 336c0 8.822-7.178 16-16 16H48c-8.822 0-16-7.178-16-16V112c0-8.822 7.178-16 16-16h416c8.822 0 16 7.178 16 16v288zM112 232c30.928 0 56-25.072 56-56s-25.072-56-56-56-56 25.072-56 56 25.072 56 56 56zm0-80c13.234 0 24 10.766 24 24s-10.766 24-24 24-24-10.766-24-24 10.766-24 24-24zm207.029 23.029L224 270.059l-31.029-31.029c-9.373-9.373-24.569-9.373-33.941 0l-88 88A23.998 23.998 0 0 0 64 344v28c0 6.627 5.373 12 12 12h360c6.627 0 12-5.373 12-12v-92c0-6.365-2.529-12.47-7.029-16.971l-88-88c-9.373-9.372-24.569-9.372-33.942 0zM416 352H96v-4.686l80-80 48 48 112-112 80 80V352z"></path></svg></a>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </li>
                    {% endfor %}
                {% else %}
                    <li class="list-group-item text-center text-muted">Répertoire vide</li>
                {% endif %}
            </ul>
        </section>
        {% else %}
        <section class="row my-2 mx-0">
            <ul class="list-group w-100">
                {% if year %}
                <li class="list-group-item py-2 px-3 d-flex">
                    <div class="col-12 px-0 align-self-center">
                        <svg focusable="false" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" height="1em"><path fill="currentColor" d="M527.9 224H480v-48c0-26.5-21.5-48-48-48H272l-64-64H48C21.5 64 0 85.5 0 112v288c0 26.5 21.5 48 48 48h400c16.5 0 31.9-8.5 40.7-22.6l79.9-128c20-31.9-3-73.4-40.7-73.4zM48 118c0-3.3 2.7-6 6-6h134.1l64 64H426c3.3 0 6 2.7 6 6v42H152c-16.8 0-32.4 8.8-41.1 23.2L48 351.4zm400 282H72l77.2-128H528z" class=""></path></svg>
                        <a href="/admin/explorer" class="text-dark text-truncate">..</a><br>
                    </div>
                </li>
                {% endif %}
                {% if files|length > 0 %}
                    {% for dir in files %}
                        <li class="list-group-item py-2 px-3 d-flex">
                            <div class="col-8 pl-0 align-self-center">
                                <svg focusable="false" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" height="1em"><path fill="currentColor" d="M527.9 224H480v-48c0-26.5-21.5-48-48-48H272l-64-64H48C21.5 64 0 85.5 0 112v288c0 26.5 21.5 48 48 48h400c16.5 0 31.9-8.5 40.7-22.6l79.9-128c20-31.9-3-73.4-40.7-73.4zM48 118c0-3.3 2.7-6 6-6h134.1l64 64H426c3.3 0 6 2.7 6 6v42H152c-16.8 0-32.4 8.8-41.1 23.2L48 351.4zm400 282H72l77.2-128H528z" class=""></path></svg>
                                <a href="/admin/explorer?{% if year %}year={{ year }}&month={{ dir.name }}{% else %}year={{ dir.name }}{% endif %}" class="text-dark text-truncate">{{ dir.name }}</a><br>
                            </div>
                            <div class="col-3 align-self-center text-nowrap text-muted">{{ dir.counter }} image{% if dir.counter|int > 1 %}s{% endif %}</div>
                            <div class="col-1 pr-0 text-right align-self-center text-nowrap">{% if dir.hr_size %}{{ dir.hr_size }}o{% else %}&ndash;{% endif %}</div>
                        </li>
                    {% endfor %}
                {% else %}
                    <li class="list-group-item text-center text-muted">Répertoire vide</li>
                {% endif %}
            </ul>
        </section>
        {% endif %}

        <footer class="small text-muted text-center my-2">
            Picture-Docker v1.0.0 &copy; vonKrafft 2019
